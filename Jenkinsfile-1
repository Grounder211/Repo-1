pipeline {
  agent any
  stages {
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t neeraj010702/zip-server:latest .'
      }
    }
    stage('Push Docker Image') {
      steps {
        withCredentials([string(credentialsId: 'docker-hub-token', variable: 'DOCKER_TOKEN')]) {
          sh '''
            echo "$DOCKER_TOKEN" | docker login -u neeraj010702 --password-stdin
            docker push neeraj010702/zip-server:latest
          '''
        }
      }
    }
    stage('Deploy to Kubernetes') {
      steps {
        sh '''
          kubectl apply -f k8s/tls-secret.yaml --validate=false || true
          kubectl apply -f k8s/deployment-1.yaml --validate=false
          kubectl apply -f k8s/service.yaml --validate=false
          kubectl apply -f k8s/ingress.yaml --validate=false
        '''
      }
    }
  }
}
